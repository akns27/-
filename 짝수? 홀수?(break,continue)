#include <stdio.h>

int main() {
    int num;
    while(1)
    {
        printf("숫자를 입력하세요 :");
        scanf("%d", &num);
        
        if(num<0) break;
        
        if(num==0) continue;
        
        if (num%2==1)
            printf("홀수\n");
        else 
        printf("짝수\n");
    }
    return 0;
}
//브레이크는 중괄호를 빠져나옴(새로 시작)
//컨티뉴는 컨티뉴 아래 문장 실행하지 않고 자신이 속한 중괄호 제일 위로 
